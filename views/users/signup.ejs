<%- include('../layout/header') %>

	


<div class="d-lg-flex half mt-4">
    <div class="bg order-1 order-md-2"></div>
    <div class="contents order-2 order-md-1">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Sign Up<strong> Shoppers</strong></h3>
            <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
            <form action="/register" method="post" id="signupValidations">
                <% if(typeof message !== 'undefined')
                { %>
    
                    <p style="color: green;"><%= message %></p>
    
                <% } %>
                <div class="form-group first">
                    <label for="email">Username</label>
                    <p id="nameValid" class="text-danger"></p>
                    <input type="text" class="form-control" placeholder="Enter Your Name" id="name" name="name">
                  </div>
              <div class="form-group first">
                <label for="email">Email</label>
                <p id="emailValid" class="text-danger"></p>
                <input type="email" class="form-control" placeholder="your-email@gmail.com" id="email" name="email">
              </div>

              <div class="form-group first">
                <label for="email">Phone</label>
                <p id="mobileValid" class="text-danger"></p>
                <input type="text" class="form-control" placeholder="Enter Your Number" id="mobile" name="mno">
              </div>
              <div class="form-group first">
                <label for="email">Referral Code(Optional)</label>
                <p id="referralErr" class="text-danger"></p>
                <input type="text" class="form-control" placeholder="Enter Referral Code" id="referralCode" name="referralCode">
              </div>

              <div class="form-group last ">
                <label for="password">Password</label>
                <p id="passwordValid" class="text-danger"></p>
                <input type="password" class="form-control" placeholder="Your Password" id="password" name="password">
              </div>
              
              <div class="d-flex mb-3 mt-2 align-items-center">
                <span class="ml-auto">Already have account?<a href="/login" class="forgot-pass">Sign in</a></span> 
              </div>
              <button type="submit" id="count"  class="btn btn-block btn-primary"style="margin-bottom: 6rem;" onclick="timer(10)">Sign Up</button>
             
            </form>
            
          </div>
        </div>
      </div>
    </div>

    
  </div>

		

	<%- include('../layout/footer') %>