<%- include('../layout/header') %>
    
<%- include('../layout/navMain') %>

<section style="background-color: #eee;">
       <form action="/edit" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="/userImages/<%= user.image %>" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                  <input type="hidden" name="user_id" value="<%= user._id %>">
                  <input type="file" name="image">
                  <div class="d-flex justify-content-center mb-2">
                    <button class="btn btn-outline-success" type="submit">Update</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Full Name</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><input type="text" name="name" id="" value="<%= user.name %>"></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><input type="email" name="email" id="" value="<%= user.email %>"></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><input type="text" name="mno" id="" value="<%= user.mobile %>"></p>
                    </div>
                  </div>
              
                    
        </div>
    </form>
      </section>

         


 <%- include('../layout/footer') %>