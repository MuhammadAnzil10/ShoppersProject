<%- include('../layout/header') %>





<div class="d-lg-flex half mt-4">
    <div class="bg order-1 order-md-2"></div>
    <div class="contents order-2 order-md-1">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Password <strong>Reset</strong></h3>
            <p class="mb-4">Enter your new Password and Confirm Password for login to your account.</p>
            <form action="/forget-password" id="forgetForms" method="post">
                <% if(typeof message !== 'undefined'){
                    %>
                    <p style="color: green;"><%=message%></p>
                   <%
                }
    
                %>
              <div class="form-group first">
                <label for="password1">Enter New Password</label>
                <input type="password" class="form-control" placeholder="New Password" id="password1" name="password">
                <p style="color: red;" id="passwordErr1"></p>
                <input type="hidden" name="user_id" value="<%= user_id %>">
              </div>
              <div class="form-group first">
                <label for="password2">Re-Enter New Password</label>
                <input type="password" class="form-control" placeholder="Re-Enter Password" id="password2" name="password2">
                <p style="color: red;" id="passwordErr2"></p>
            
              </div>
              
              
              <input type="submit" value="Submit" class="btn btn-block btn-primary mt-4">
              <br><br><br><br>
              


            </form>
          </div>
        </div>
      </div>
    </div>

    
  </div>



         
          




<%- include('../layout/footer') %>







