<%- include('../layout/header') %>
  
<section style="background-color: #eee;">
  <div class="container py-5">
    <a href="/add-address" class="btn btn-outline-primary">Add New Address</a>
   <% if(typeof userAddress !== 'undefined'){ %>
    
<% for(let i=0; i<userAddress.addresses.length;i++){%>

 

    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10" style="width: 650px;">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 col-lg-6 col-xl-6">
                <h5><%=userAddress.addresses[i].name %></h5>
                <div class="mt-1 mb-0 text-muted small">
                  <p class="text-truncate mb-4 mb-md-0">
                   Phone : <%=userAddress.addresses[i].phone %>
                    </p>
                </div>
                <div class="mt-1 mb-0 text-muted small">
                  <p class="text-truncate mb-4 mb-md-0">
                   Address Line 1 : <%=userAddress.addresses[i].addressLine1 %>
                    </p>
                </div>
                <div class="mb-2 text-muted small">
                  <p class="text-truncate mb-4 mb-md-0">
                    Address Line 2 : <%=userAddress.addresses[i].addressLine2 %>
                    </p>
                </div>
                <div class="mb-2 text-muted small">
                  <p class="text-truncate mb-4 mb-md-0">
                    Area : <%=userAddress.addresses[i].area %>
                    </p>
                </div>
                <p class="text-truncate mb-4 mb-md-0">
                 State : <%=userAddress.addresses[i].state %>
                </p>
              </div>
              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                <div class="d-flex flex-row align-items-center mb-1">
                  <h4 class="mb-1 me-1"></h4>
                  <span class="text-danger"><s><a href="/delete-address?id=<%=userAddress.addresses[i]._id %>" class=""><button class="btn btn-danger btn-sm" type="button">Delete Address</button></a></s></span>
                </div>
                <h6 class="text-success"></h6>
                <div class="d-flex flex-column mt-4">
                  <% if(userAddress.addresses[i].isDefault){%>
                    <a href="#"><button class="btn btn-primary btn-sm" type="button">Default Address</button></a>
                    <% }else{ %>
                      <a href="/default-address?id=<%=userAddress.addresses[i]._id %>"><button class="btn btn-primary btn-sm" type="button">Make Default</button></a>
                    <% } %>
                  <a href="/edit-address?id=<%=userAddress.addresses[i]._id %>"><button class="btn btn-outline-primary btn-sm mt-2" type="button"> 
                    Edit Address
                  </button></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
 


	
	

<% } %>

<% } else { %>

  <h1>No address Added</h1>

 <% } %>
</div>
</section>
  <%- include('../layout/footer') %>