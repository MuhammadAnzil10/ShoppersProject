                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%= admin[0].mobile %></p>
                    </div>
                  </div>
              
                    
        </div>
      </section>

         


