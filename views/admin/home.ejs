<%- include('../layout/adminHeader') %>
    

<section style="background-color: #eee;">
       
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="/images/adminImages/man.png" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3"><%= admin[0].name %></h5>
                  <p class="text-muted mb-1"><a href="/admin/Dashboard" class="btn btn-primary">Dashboard</a></p>
