<%- include('../layout/adminHeader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Customer Details </h2>
                </div>
                <!-- <div>
                    <a href="/admin/new-user" class="btn " style="background-color: #088178; color: white;">Add User</a>
                </div> -->
            </div>
            <div class="card mb-4">
             <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table  id="myTable" >
                            <thead>
                                <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Verified</th>
                                    <th></th>
                                    <th></th>
                                    <th scope="col" style="padding-left: 32px;"> Actions</th>
                               
                                    
                                </tr>
                            </thead>
                            <tbody >

                                <% for(let i=0;i<user.length;i++)
                                {  %>

                                
                                <tr class="container">
                                    <% if(user[i].image){%>
                                        <td class="pt-3"><a class="" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="/images/userImages/<%= user[i].image %>" alt="User"></a></td>
                                 <% }else{ %>
                                    <td class="pt-3"><a class="" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="/images/userImages/image-not-found-1-scaled.png" alt="User"></a></td>

                               <%  } %>
                                    
                                    <td class="name"><%= user[i].name %></td>
                                    <td><template class="__cf_email__" data-cfemail="aec3cfdcd8c7c0eecbd6cfc3dec2cb80cdc1c3">[email&#160;protected]</template><%= user[i].email %></td>
                                    <td><%= user[i].mobile %></td>
                                    <td><span class="badge rounded-pill alert-warning"  
                                        color=""
                                        
                                        <% if(user[i].isBlocked===0){ %>
                                            style="color:green"
                                            
                                            
                                       <% }else{ %>
                                        style="color:#f46a6a"
                                      <% } %>
                                        
                                        
                                        >
                                        <% if(user[i].isBlocked===0){ %>
                                         
                                            Active
                                            
                                       <% }else{ %>
                                         Blocked
                                      <% } %>
                                    </span></td>
                                    <td>
                                        <span class="badge rounded-pill alert-warning blockColor"  
                                        color=""
                                        
                                        <% if(user[i].is_varified === 0){ %>
                                            
                                            style="color:#f46a6a"
                                            
                                       <% }else{ %>
                                        
                                        style="color:green"
                                      <% } %>
                                        
                                        
                                        >
                                        <% if(user[i].is_varified===0){ %>
                                         
                                           Not Verified
                                            
                                       <% }else{ %>
                                         Verified
                                      <% } %>
                                    </span>
                                    </td>
                                    <td class="text-end">
                                        
                                        <!-- <a href="/admin/edit-user?id=<%= user[i]._id %>" class="btn btn-md rounded font-sm ">Edit</a> -->
                                        </div> <!-- dropdown //end -->
                                         
                                    </td>
                                    <td>
                                        
                                    </td>
                                    <% if(user[i].isBlocked===0){ %>
                                        <td class="text-end">
                                            <a href="<%= user[i]._id %>" class="btn btn-md rounded font-sm blockUser">Block</a>
                                            </div> <!-- dropdown //end -->
                                        </td>
                                        
                                        
                                   <% }else{ %>
                                    <td>
                                        <a href="<%= user[i]._id %>" class="btn btn-md rounded font-sm unblockUser">Unblock</a>
                                    </td>
                                  <% } %>
                                         
                                           
                                        
                                </tr>
                           <% } %>

                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script data-cfasync="false" src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
                    document.write(new Date().getFullYear())
                    </script>
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
