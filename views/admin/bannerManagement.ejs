<%- include('../layout/adminHeader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner Management </h2>
                </div>
                <div>
                    <a href="/admin/add-banner" class="btn " style="background-color: #088178; color: white;">Add Banner</a>
                </div>
            </div>
            <div class="card mb-4">
             <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table  id="myTable" >
                            <thead>
                                <tr>
                                    <th scope="col">Banner Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Active</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col" style="padding-left: 136px;">Actions</th>           
                                </tr>
                            </thead>
                            <tbody >

                                <% if(typeof banners !== 'undefined'){%>

                                <% for(let i=0;i<banners.length;i++)
                                {  %>

                                
                                <tr class="container">
                                    <td class="pt-3"><a class="" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="/images/userImages/<%= banners[i].image %>" alt="User"></a></td>
                                    <td class="name"><%= banners[i].name %></td>
                                    <td class="name"><%= banners[i].description %></td>
                                    <td><span class="badge rounded-pill alert-warning"  
                                        color=""
                                        
                                        <% if(banners[i].isActive){ %>
                                            style="color:green"
                                            
                                            
                                       <% }else{ %>
                                        style="color:#f46a6a"
                                      <% } %>
                                        
                                        
                                        >
                                        <% if(banners[i].isActive){ %>
                                         
                                            Active
                                            
                                       <% }else{ %>
                                         Blocked
                                      <% } %>
                                    </span>
                                    </td>
                                    <td>
                                        <a href="/admin/edit-banner?id=<%= banners[i]._id %>" class="btn btn-md rounded font-sm editBanner">Edit</a>
                                    </td>
                                    <% if(banners[i].isActive){ %>
                                        <td class="text-end" style="padding-right: 62px;">
                                            <a href="/admin/block-banner?id=<%= banners[i]._id %>" class="btn btn-md rounded font-sm blockBanner">Block</a>
                                            </div> <!-- dropdown //end -->
                                        </td>
                                        
                                        
                                   <% }else{ %>
                                    <td>
                                        <a href="/admin/unblock-banner?id=<%= banners[i]._id %>" class="btn btn-md rounded font-sm unblockBanner">Unblock</a>
                                    </td>
                                  <% } %>
                                         
                                           
                                        
                                </tr>
                           <% } %>
                            <%} else{%>

                                <tbody>
                                    <tr>
                                        <td>
                                            No Data
                                        </td>
                                    </tr>
                                </tbody>
                                <%}%>

                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script data-cfasync="false" src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
                    document.write(new Date().getFullYear())
                    </script>
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
