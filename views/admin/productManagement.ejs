<%- include('../layout/adminHeader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Product Details </h2>
                </div>
                <div>
                    <a href="/admin/product/add-product" class="btn " style="background-color: #088178; color: white;">Add Product</a>
                </div>
                
            </div>
            <div class="card mb-4">
             <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="myTable" >
                            <thead>
                                <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Regular Price</th>
                                    <th scope="col">Discount(%)</th>
                                    <th scope="col">Promotional Price</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col" >Status</th>
                             
                                    
                                    <th scope="col" style="padding-left: 32px;"> Actions</th>
                                    <th></th>
                                    
                                </tr>
                            </thead>
                            <tbody >
                                <% if(typeof product !== 'undefined'){ %>

                                <% for(let i=0;i<product.length;i++)
                                {  %>

                                
                                <tr>
                                    <td class="pt-3"><a class="" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="/images/productImages/<%= product[i].images[0] %>" alt="User"></a></td>
                                    <td><%= product[i].name %></td>
                                    <td><template class="__cf_email__" data-cfemail="aec3cfdcd8c7c0eecbd6cfc3dec2cb80cdc1c3">[email&#160;protected]</template><%= product[i].description %></td>
                                    <td><%= product[i].regularPrice %></td>
                                    <td><%= product[i].percentageDiscount %> %</td>
                                    <td><%= product[i].productPrice %></td>
                                    <td style="padding-left: 20px;"><%= product[i].stock %></td>
                                    <td><span class="badge rounded-pill alert-warning"  
                                        color=""
                                        
                                        <% if(product[i].unlist){ %>
                                            
                                            style="color:#f46a6a"
                                            
                                       <% }else{ %>
                                       
                                        style="color:green"
                                      <% } %>
                                        
                                        
                                        >
                                        <% if(!product[i].unlist){ %>
                                         
                                            List
                                            
                                       <% }else{ %>
                                         Unlist
                                      <% } %>
                                    </span></td>
                                    <% if(!product[i].unlist){ %>
                                         
                                        <td class="text-end">
                                            <a href="<%= product[i]._id %>" class="btn btn-md rounded font-sm unlistProductButton">Unlist</a>
                                            </div> <!-- dropdown //end -->
                                        </td>
                                        
                                   <% }else{ %>
                                    <td>
                                        <a href="<%= product[i]._id %>" class="btn btn-md rounded font-sm listProduct">List</a>
                                    </td>
                                    
                                   
                                  <% } %>
                                    <td class="text-end">
                                        
                                        <a href="/admin/product/edit-product?id=<%= product[i]._id %>" class="btn btn-md rounded font-sm ">Edit</a>
                                        </div> <!-- dropdown //end -->
                                         
                                    </td>
                                         
                                       
                                </tr>
                           <% } %>

                           <% }else{ %>

                             <td>No Product in the list</td>

                         <%  }  %>

                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script data-cfasync="false" src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
                    document.write(new Date().getFullYear())
                    </script>
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>

