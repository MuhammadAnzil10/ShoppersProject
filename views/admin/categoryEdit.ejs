<%- include('../layout/adminHeader') %>


<section class="content-main">
    <div class="card mx-auto card-login">
        <div class="card-body">
            <% if(typeof message !== 'undefined'){%>
               <p style="color: red;"> <%= message %></p>
           <% } %>
            <h4 class="card-title mb-4">Edit Category</h4>
            <form method="post" action="/admin/category/edit-category" id="editCategoryForm">
            <p>Give specific Name.</p> 
                <div class="mb-3">
                    <p style="color: red;" id="editCategoryNameErr"></p>
                    <input class="form-control" type="text" name="name" value="<%= category.name %>" id="editCategoryName">
                </div> <!-- form-group// -->

                <div class="mb-3">
                    <p style="color: red;" id="editCategoryDescriptionErr"></p>
                    <input class="form-control"  type="text" name="description" value="<%= category.description %>" id="editCategoryDescription">
                    <input type="hidden" name="category_id" id="" value="<%= category._id %>">
                </div>
                <div class="mb-3">
                    <p style="color: red;" id="errpercentageDiscount" ></p>
                    <input class="form-control" value="<%= category.percentageDiscount %>" type="number" name="percentageDiscount" id="percentageDiscount">
                </div>
      
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100"> Edit Category </button>
                </div> <!-- form-group// -->
            </form>
        </div>
    </div>
  </section>
  
<%- include('../layout/adminFooter') %>